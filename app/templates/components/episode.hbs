<li
  class="episode{{if this.isExpanded " -is-expanded"}}"
  ...attributes
>
  <div
    class="episode_titles cursor-pointer"
    onClick={{action this.toggleIsExpanded}}
    role="button"
  >
    <span class="episode_title">{{this.args.episode.number}}. {{this.args.episode.name}}</span>
    <span class="episode_action-show">
      {{#if this.isExpanded}}
        Masquer l'épidode
      {{else}}
        Regarder cet épisode
      {{/if}}
    </span>
  </div>

  {{#liquid-spacer growDuration=200}}
    {{#if this.isExpanded}}
      <div class="episode_block">

        <iframe
          src={{this.args.episode.videoUrl}}
          class="episode_iframe"
          allowfullscreen="true"
          scrolling="false"
        >
        </iframe>

        <div class="copy">
          <span class="copy_label">Les sous titres:</span>
          <div class="copy_block">
            <input
            class="copy_input"
            type="text"
            name="subtitles.srt"
            value="htttp://kdsjlks.sdfs"
            readonly={{true}}
          >
            <span class="copy_action-copy text-tiny cursor-pointer">
              Copier le lien
            </span>
          </div>
        </div>

      </div>
    {{/if}}
  {{/liquid-spacer}}

</li>
