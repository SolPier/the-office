<div class="copy-box d-flex align-items-center">
  <input
    id={{this.UId}}
    class="copy-box_input"
    type="text"
    name="{{this.UId}}-track"
    value={{this.subtitlesPath}}
    readonly={{true}}
  >
  {{#if this.hasCopiedLink}}
    <span class="copy-box_button-copy -link-copied text-tiny cursor-pointer">
      Lien copi√© !
    </span>
  {{else}}
    <span
      class="copy-box_button-copy -action-copy-link text-tiny cursor-pointer"
      role="button"
      onClick={{action this.copySubtitlesLinkToClipboard}}
    >
      Copier le lien des sous titres
    </span>
  {{/if}}
  <button
    class="copy-box_button-help -action-display-help text-tiny cursor-pointer"
    onClick={{action this.args.toggleHelp}}
  >
    ?
  </button>
</div>
